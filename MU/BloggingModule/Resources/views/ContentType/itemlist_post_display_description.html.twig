{# Purpose of this template: Display posts within an external context #}
<dl>
    {% for post in items %}
        <dt>{{ post|mubloggingmodule_formattedTitle }}</dt>
        {% if post.summaryOfPost %}
            <dd>{{ post.summaryOfPost|striptags|truncate(200, true, '&hellip;') }}</dd>
        {% endif %}
        <dd><a href="{{ path('mubloggingmodule_post_display', {'slug': post.slug}) }}" title="{{ __('Read more')|e('html_attr') }}">{{ __('Read more') }}</a>
        </dd>
    {% else %}
        <dt>{{ __('No entries found.') }}</dt>
    {% endfor %}
</dl>
