{# purpose of this template: inclusion template for display of related posts #}
{% set hasAdminPermission = hasPermission('MUBloggingModule:Post:', '::', 'ACCESS_COMMENT') %}
{% if noLink is not defined %}
    {% set noLink = false %}
{% endif %}
{% if items|default and items|length > 0 %}
<ul class="list-group mubloggingmodule-related-item-list post">
{% for item in items %}
    {% if hasAdminPermission or item.workflowState == 'approved' %}
    <li class="list-group-item">
<h4 class="list-group-item-heading">
{% spaceless %}
{% if not noLink %}
    <a href="{{ path('mubloggingmodule_post_' ~ routeArea ~ 'display', { 'slug': item.slug }) }}" title="{{ item|mubloggingmodule_formattedTitle|e('html_attr') }}">
{% endif %}
    {{ item|mubloggingmodule_formattedTitle }}
{% if not noLink %}
    </a>
    <a id="postItem{{ item.getKey() }}Display" href="{{ path('mubloggingmodule_post_' ~ routeArea ~ 'display', { 'slug': item.slug, 'raw': 1 }) }}" title="{{ __('Open quick view window') }}" class="mublogging-inline-window hidden" data-modal-title="{{ item|mubloggingmodule_formattedTitle|e('html_attr') }}"><span class="fa fa-id-card-o"></span></a>
{% endif %}
{% endspaceless %}
</h4>
{% if item.imageForArticle is not empty and item.imageForArticleMeta.isImage %}
    <p class="list-group-item-text">
        <img src="{{ item.imageForArticle.getPathname()|imagine_filter('zkroot', relationThumbRuntimeOptions) }}" alt="{{ item|mubloggingmodule_formattedTitle|e('html_attr') }}" width="{{ relationThumbRuntimeOptions.thumbnail.size[0] }}" height="{{ relationThumbRuntimeOptions.thumbnail.size[1] }}" class="img-rounded" />
    </p>
{% endif %}
    </li>
    {% endif %}
{% endfor %}
</ul>
{% endif %}
