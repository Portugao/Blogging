{# Purpose of this template: Display posts within an external context #}
{% for post in items %}
    <h3>{{ post|mubloggingmodule_formattedTitle }}</h3>
    <p><a href="{{ path('mubloggingmodule_post_display', {'slug': post.slug}) }}" title="{{ __('Read more')|e('html_attr') }}">{{ __('Read more') }}</a>
    </p>
{% endfor %}
